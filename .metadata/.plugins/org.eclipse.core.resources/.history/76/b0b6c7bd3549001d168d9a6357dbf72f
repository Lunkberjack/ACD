package main;

import org.w3c.dom.Document;
import org.w3c.dom.Element;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;
import javax.xml.parsers.ParserConfigurationException;

public class TratamientoXML {

	public static void main(String[] args) {
		DocumentBuilderFactory dbf = DocumentBuilderFactory.newInstance();
		DocumentBuilder db;
		
		try {
			db = dbf.newDocumentBuilder();
			Document doc = db.newDocument();
			Element raiz = doc.createElement("libreria");
			doc.appendChild(raiz);
			Element libros = doc.createElement("libros");
			raiz.appendChild(libros);
			Element libro = doc.createElement("libro");
		} catch (ParserConfigurationException e) {
			e.printStackTrace();
		}
	}
	
	/**
	 * Crea un elemento para el doc.
	 * @param doc
	 * @param nombre - tipo de elemento a crear
	 * @param par1 - isbn, en caso de un libro
	 * @return elem - el elemento que se añadirá al doc.
	 */
	private Element crearElemento(Document doc, String nombre, String par1) {
		Element elem = doc.createElement(nombre);
		// Si hubiera más tipos de elemento se podrían pasar más o menos parámetros
		// como atributos.
		switch (nombre) {
		case "libro":
			elem.setAttribute("isbn", par1);
			Element autor = doc.createElement("autor");
			elem.appendChild(autor);
			Element titulo = doc.createElement("titulo");
			elem.appendChild(titulo);
			break;
		}
		return elem;
	}
}
