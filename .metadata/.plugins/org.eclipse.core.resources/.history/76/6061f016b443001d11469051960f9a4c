package main;

import java.io.File;
import java.io.IOException;
import java.io.RandomAccessFile;

public class AccesoRandomEj1 {

	public static void main(String[] args) {
		try {
			File f = new File("/home/lucia/Escritorio/fichero.dat");
			RandomAccessFile inOut = new RandomAccessFile(f, "rw");
			String texto;
			
	         // set the file pointer at 0 position
	        inOut.seek(0);

	         // create an array equal to the length of raf
	        byte[] arr = new byte[(int) inOut.length()];
			inOut.readFully(arr);
			
			texto = new String(arr);
			inOut.writeBytes(texto.toUpperCase().replaceAll(" ", ""));

		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}