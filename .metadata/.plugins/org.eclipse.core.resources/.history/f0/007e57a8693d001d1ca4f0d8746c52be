package main;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;

public class LectraEscrituraFlujosByte {

	public static void main(String[] args) {
		try {
			leer();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public static void leer() throws IOException {
		File f = new File("/home/lucia/Arbeitsfl√§che/repaso.txt");
		FileInputStream fis = new FileInputStream(f);
		int letra = fis.read();
		System.out.print((char)letra);
		
		while (letra != -1) {
			letra = fis.read();
			System.out.print((char)letra);
		}
		fis.close();
	}
}
